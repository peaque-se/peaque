    "@types/jest": "^30.0.0",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/ws": "^8.5.0",
    "archiver": "^7.0.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.3.0"
