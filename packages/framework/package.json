{
  "name": "@peaque/framework",
  "version": "2.6.1",
  "description": "The last javascript framework ever to be needed - A modern, full-stack TypeScript framework with file-based routing, React, and Tailwind CSS",
  "type": "module",
  "license": "MIT",
  "author": "Peaque AB",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/http/index.js",
      "types": "./dist/http/index.d.ts"
    }
  },
  "bin": {
    "peaque": "./dist/cli/main.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "peaque",
    "framework",
    "react",
    "typescript",
    "tailwind",
    "tailwindcss",
    "fullstack",
    "file-based-routing",
    "hmr",
    "hot-reload",
    "esbuild",
    "websocket",
    "api-routes",
    "ssr",
    "web-framework"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/peaque-se/peaque",
    "directory": "packages/framework"
  },
  "bugs": {
    "url": "https://github.com/peaque-se/peaque/issues"
  },
  "homepage": "https://peaque.dev/framework",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "node ../../scripts/rmdir.mjs dist",
    "build": "npm run clean && tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
