    "@tailwindcss/oxide": "^4.1.14",
    "babel-plugin-react-compiler": "^1.0.0",
    "chokidar": "^3.5.0",
    "commander": "^14.0.1",
    "croner": "^9.1.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.25.10",
    "fast-deep-equal": "^3.1.3",
    "glob": "^10.3.0",
    "mime-types": "^2.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-refresh": "^0.17.0",
