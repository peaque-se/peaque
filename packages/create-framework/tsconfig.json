{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "outDir": "dist"
  },
  "include": ["src", "types"],
  "exclude": ["templates", "dist"]
}
